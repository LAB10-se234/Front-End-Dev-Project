<section class="section-products">
    <div class="container">
            <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                            <div class="header">
                                    <h3>Featured Product</h3>
                                    <h2>Popular Products</h2>
                            </div>
                    </div>
            </div>
            <div class="row">
                <% if(categories != '') {%>
                        <% categories.forEach(function (category, index) {%> 
                                <!-- Single Product -->
                                <div class="col-md-6 col-lg-4 col-xl-3 boxs" id="product">
                                        <div id="product-1" class="single-product">
                                                <div id="<%- category.ID %>">
                                                        <div class="part-1" style="background-image: url('<%- category.image %>');background-size: 140%;background-repeat: no-repeat;">
                                                                <span class="new" id="idMenu"><%- category.ID %></span>
                                                                <ul>
                                                                        <button onclick="addCart(this.id)" type="button" class="btn btn-primary" id="<%- category.ID %>"><i class="bi bi-cart3"></i></button>
                                                                </ul>
                                                        </div>
                                                        <div class="part-2">
                                                                
                                                                <h3 class="product-title" id="name"><%- category.name %> </h3>
                                                                <h4 class="product-price" id="price"><%- category.price %> Baht.</h4>
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                        <% }) %> 
                <% } %> 
            </div>
    </div>
</section>